<p style="color: green"><%= notice %></p>

<h1>Services</h1>

<div id="services">
  <table class="table table-striped">
    <thead>
      <tr>
        <th><%= Service.human_attribute_name(:name) %></th>
        <th><%= Service.human_attribute_name(:technology) %></th>
        <th><%= Service.human_attribute_name(:repository_url) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>
     <tbody>
      <% @services.each do |service| %>
        <tr>
          <td><%= service.name %></td>
          <td><%= service.technology %></td>
          <td><%= service.repository_url %></td>
          <td>
            <%= link_to service do %>
              <i class="bi bi-eye-fill"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_service_path(service) do %>
              <i class="bi bi-pencil-fill"></i>
            <% end %>
          </td>
          <td>
            <%= link_to service, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <i class="bi bi-trash-fill"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
  </table>
</div>

<%= link_to "New service", new_service_path, class: "btn btn-success" %>
